StateMachine{
  name: pongStateMachine;

  Signal start();
  Signal end();
  Signal ping();
  Signal pong();

  Port p_ext;
  Port p_ping;

  SimpleState{
    name: init;
  }

  SimpleState{
    name: pong;
  }

  FinalState{
    name: final;
  }

  initState:init;

  SignalTransition{
    name: t_start;
    signal: start;
    port: p_ext;
    source: init;
    target: pong;
  }

  SignalTransition{
    name: t_pingpong;
    signal: ping;
    port: p_ping;
    action: send pong() to p_ping;
    source: pong;
    target: pong;
  }

  SignalTransition{
    name: t_final;
    signal: end;
    port: p_ext;
    source: pong;
    target: final;
  }
}

